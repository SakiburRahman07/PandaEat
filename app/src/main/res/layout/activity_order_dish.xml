<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:background="@drawable/b1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".customerFoodPanel.OrderDish">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header Image -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>


                <!-- Food Details Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="#EA76AA"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Food Name -->
                        <TextView
                            android:id="@+id/food_name"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:maxWidth="300dp"
                            android:text="Food Name"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>




                <!-- Chef Details Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#C496DC"
                        android:orientation="vertical">

                        <!-- Chef Name -->
                        <TextView
                            android:id="@+id/chef_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:padding="10dp"
                            android:text="Chef Name"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <!-- Chef Location -->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/rattext"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:padding="10dp"
                            android:text="Rating       "
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5" />


                    </LinearLayout>


                        <TextView
                            android:id="@+id/chef_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:padding="10dp"
                            android:text="Chef Location"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <!-- Food Quantity -->
                        <TextView
                            android:id="@+id/food_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:padding="10dp"
                            android:text="Food Quantity"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <!-- Food Price -->
                        <TextView
                            android:id="@+id/food_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:padding="10dp"
                            android:text="Food Price"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <!-- Food Description -->
                        <TextView
                            android:id="@+id/food_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="8dp"
                            android:padding="10dp"
                            android:text="Food Description"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <!-- Quantity EditText -->
                        <EditText
                            android:id="@+id/number_btn"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginBottom="10dp"
                            android:inputType="number"
                            android:layout_marginStart="15dp"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="15dp"
                            android:hint="Enter Quantity" />

                        <!-- Place Order Button -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/placeorderbutton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blueish"
                            android:textSize="15dp"
                            android:text="Add to cart" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
